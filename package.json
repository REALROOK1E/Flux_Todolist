{
  "name": "mytodo-electron",
  "version": "1.0.0",
  "description": "像素风格的 Electron 清单应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build-win": "electron-builder --win",
    "build": "electron-builder"
  },
  "keywords": ["electron", "todo", "task", "timer", "pixel"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.mytodo.app",
    "productName": "MyTodo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
