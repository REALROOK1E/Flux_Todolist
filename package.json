{
  "name": "flux-electron",
  "version": "2.16.0",
  "description": "像素风格的 Electron 时间流动应用 - 体验专注工作的流动状态",
  "main": "main.js",
  "homepage": "https://github.com/REALROOK1E/Flux",
  "repository": {
    "type": "git",
    "url": "https://github.com/REALROOK1E/Flux.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac", 
    "build-linux": "electron-builder --linux",
    "build": "electron-builder",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["electron", "todo", "task", "timer", "pixel", "productivity", "desktop-app", "checklist"],
  "author": {
    "name": "REALROOK1E",
    "email": "developer@flux.app"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.flux.electron",
    "productName": "Flux",
    "copyright": "Copyright © 2025 REALROOK1E",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!node_modules/**/*",
      "!dist/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Flux"
    },
    "dmg": {
      "title": "Flux ${version}"
    }
  }
}
