{
  "name": "mytodo-electron",
  "version": "1.2.1",
  "description": "像素风格的 Electron 清单应用 - 提升生产力的桌面待办事项管理工具",
  "main": "main.js",
  "homepage": "https://github.com/REALROOK1E/Mytodo",
  "repository": {
    "type": "git",
    "url": "https://github.com/REALROOK1E/Mytodo.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac", 
    "build-linux": "electron-builder --linux",
    "build": "electron-builder",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["electron", "todo", "task", "timer", "pixel", "productivity", "desktop-app", "checklist"],
  "author": {
    "name": "REALROOK1E",
    "email": "developer@mytodo.app"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.mytodo.electron",
    "productName": "MyTodo",
    "copyright": "Copyright © 2025 REALROOK1E",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!node_modules/**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MyTodo"
    },
    "dmg": {
      "title": "MyTodo ${version}"
    }
  }
}
